# Development Dockerfile for Nuxt 3
FROM node:20-alpine AS development

# Install dependencies
RUN apk add --no-cache libc6-compat

# Use the existing node user (UID 1000) to match host user

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Change ownership of the app directory to the node user
RUN chown -R node:node /app

# Switch to non-root user
USER node

# Expose port
EXPOSE 3000

ENV HOST=0.0.0.0
ENV PORT=3000

# Copy and setup path fixing script
COPY fix-nuxt-ui-paths.sh /usr/local/bin/fix-nuxt-ui-paths.sh
RUN chmod +x /usr/local/bin/fix-nuxt-ui-paths.sh

# Start development server with automatic path fixing
CMD ["/usr/local/bin/fix-nuxt-ui-paths.sh", "npm", "run", "dev"]